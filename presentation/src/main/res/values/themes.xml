<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kickoff" parent="Theme.Material3.DayNight.NoActionBar">

    </style>
    
    <style name="Large">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="textTitleStandingsFragment">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:textColor">@color/fontHeavy</item>
        <item name="android:layout_marginStart">@dimen/spacing_24</item>
    </style>

    <style name="textContentStandingFragment">
        <item name="android:textSize">@dimen/font_size_12sp</item>
        <item name="android:textColor">@color/fontHeavy</item>
    </style>
    <style name="medium">
        <item name="android:fontFamily">@font/lato_medium</item>
    </style>

    <style name="small">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TitleLarge">
        <item name="android:textSize">@dimen/font_size_20sp</item>
    </style>

    <style name="TitleMedium" parent="medium">
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <style name="TitleSmall" parent="small">
        <item name="android:textSize">@dimen/font_size_14sp</item>
    </style>

    <style name="SubtitleLarge">
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <style name="SubtitleMedium" parent="medium">
        <item name="android:textSize">@dimen/font_size_14sp</item>
    </style>

    <style name="SubtitleSmall" parent="small">
        <item name="android:textSize">@dimen/font_size_12sp</item>
    </style>

    <style name="bodyLarge">
        <item name="android:textSize">@dimen/font_size_12sp</item>
    </style>

    <style name="bodyMedium" parent="medium">
        <item name="android:textSize">@dimen/font_size_12sp</item>
    </style>

    <style name="bodySmall" parent="small">
        <item name="android:textSize">@dimen/font_size_12sp</item>
    </style>

    <style name="discover_team">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="explore_team">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#66272727</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
</resources>