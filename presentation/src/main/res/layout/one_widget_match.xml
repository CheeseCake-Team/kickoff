<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/one_match_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/widget_home_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="@dimen/spacing_56"
        android:layout_marginVertical="@dimen/spacing_8"
        tools:text="Liverpool" />

    <TextView
        android:id="@+id/widget_away_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/spacing_56"
        android:layout_marginVertical="@dimen/spacing_8"
        tools:text="Liverpool" />

    <TextView
        android:id="@+id/widget_match_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:layout_toEndOf="@id/widget_home_team_name"
        android:layout_toStartOf="@id/widget_away_team_name"
        android:layout_marginVertical="@dimen/spacing_8"
        tools:text="09:10" />
</RelativeLayout>