<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.cheesecake.presentation.screens.team.TeamViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        tools:context=".screens.competition.CompetitionFragment">

        <Button
            android:id="@+id/back_button"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            android:onClick="@{()-> viewModel.onBackClick()}"
            android:layout_marginTop="8dp"
            app:icon="@drawable/ic_back"
            app:iconTint="@color/fontHeavy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/team_image_size_48dp"
            android:layout_height="@dimen/team_image_size_48dp"
            android:contentDescription="@string/league_loge"
            app:imageUrl="@{viewModel.state.imageUrl}"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toTopOf="@+id/back_button" />


        <TextView
            android:id="@+id/team_name_text_view"
            style="@style/TitleLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginEnd="16dp"
            android:text="@{viewModel.state.teamName}"
            android:textColor="@color/fontHeavy"
            app:layout_constraintEnd_toStartOf="@+id/button_favourites"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/country_team_text_view"
            style="@style/TitleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_8"
            android:text="@{viewModel.state.country}"
            android:textColor="@color/backLighter"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/team_name_text_view"
            app:layout_constraintStart_toStartOf="@+id/team_name_text_view"
            app:layout_constraintTop_toBottomOf="@+id/team_name_text_view" />

        <CheckBox
            android:id="@+id/button_favourites"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_16"
            android:button="@drawable/sl_favourite"
            android:checked="@{viewModel.state.isFavourite}"
            android:onClick="@{() -> viewModel.state.onTeamFavoriteClick}"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/team_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:backgroundTint="@color/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout"
            app:layout_constraintVertical_bias="1.0">

        </androidx.viewpager2.widget.ViewPager2>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>