<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_tiny">

    <ImageView
        android:id="@+id/team_icon_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginVertical="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/club_name_text_view"
        style="@style/SubtitleSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:textColor="@color/fontHeavy"
        app:layout_constraintBottom_toBottomOf="@+id/team_icon_button"
        app:layout_constraintEnd_toStartOf="@+id/total_number_text_view"
        app:layout_constraintStart_toEndOf="@+id/team_icon_button"
        app:layout_constraintTop_toTopOf="@+id/team_icon_button" />


    <TextView
        android:id="@+id/total_number_text_view"
        style="@style/SubtitleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fontHeavy"
        app:layout_constraintBottom_toBottomOf="@+id/team_icon_button"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/team_icon_button" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="44dp" />


</androidx.constraintlayout.widget.ConstraintLayout>